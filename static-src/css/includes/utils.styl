rem(value) { /* separate mixin, so it can be used elsewhere */
        return unit(value/16, 'rem');
}
.clearfix
.cf
  &:after, &:before
    content " "
    display table
  &:after
    clear both

.uppercase
  text-transform uppercase
.lowercase
  text-transform lowercase

.no-paddings
  padding 0!important
// transition(prop)
//   transition prop .13s ease-in-out

placeholder()
  ::placeholder
    {block}
  .placeholder
    {block}

ellipsis()
  display inline-block
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

vertical-ellipsis(lines, lineHeight)
  overflow hidden
  max-height (lineHeight * lines)
  display -webkit-box
  -webkit-line-clamp lines
  -webkit-box-orient vertical


.video-wrapper
  position: relative;
  padding-bottom: 56.25%; /* 16:9 */
  padding-top: 25px;
  height: 0;
  iframe
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    
aspect-ratio($width, $height)
  position: relative
  &:before
    display: block
    content: ""
    width: 100%
    padding-top: ($height / $width * 100%)
  > div
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0