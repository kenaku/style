.common-slider
  position relative
  .slide-meta
    display none
  &__control
    z-index: 100
    position: absolute
    cursor: pointer
    width: 10%
    height: 100%
    left 0;
    top 0
    display block!important
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    transition opacity .3s
    opacity .7
    .no-touch &:hover
      opacity 1
    i
      width: rem(32)
      height: rem(32)
      display: block
      position: absolute
      margin: auto
      top: 0
      bottom: 0
      left: 0
      right: 0
    &--next
      right: 0
      left auto 
      i
        transform: rotate(180deg)
  &__meta
    padding rem(10) 0
    font-weight 500
  &__author
    font-size rem(12)
    font-weight 300  
  &__counter
    text-align right