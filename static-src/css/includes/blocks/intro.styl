.intro
  position relative
  color white
  +above(md)
    height 615px
    overflow hidden
  +below(md)
    .ps-scrollbar-y-rail
      display none!important
  &__banner
    width: 100%
    display: block
    +below(xs)
      padding-bottom rem(15)
    &--orange
      transition background-color .3s
      background: orange
    &--blue
      transition background-color .3s
      background: blue
  a.intro__banner--orange:hover
    background: #E55D2A
    .touch &
      background: orange
      color white
  a.intro__banner--blue:hover
    background: #09518D
    .touch &
      background: blue
      color white
  a
    color white
    transition background-color .3s
    .touch &:hover
      color white
  &__header
    padding rem(30) rem(30) rem(15)
    font-size: rem(36)
    line-height: rem(43)
    +below(xs)
      padding rem(15)
      font-size: rem(26)
      line-height: rem(32)
  &__text
    padding 0 rem(30) rem(30)
    font-size: rem(21)
    font-family: font-sans
    // font-weight: 300
    +below(xs)
      padding 0 rem(15) rem(15)
      line-height: rem(20)
      font-size: rem(17)
  &__image
    width 100%
    padding rem(0) 0 0
  &__slider
    padding 0
  &__slide
    display block
  &__econ
    padding 0
    &__links
      display table
      width: 100%
      width: calc(100% + 1px);
      margin-bottom rem(30)
    &__link
      width 1%
      background: gray5
      display: table-cell
      text-align: center
      vertical-align middle
      height rem(60)
      color white
      font-family: font-sans
      font-size: rem(13)
      .no-touch &:hover
        background blue
      +below(xs)
        padding-top rem(10)
        display block
        width auto
    &__features
      padding  rem(30) rem(30) rem(40)
      width 100%
      +below(600px)
        display none
      & .intro__header
      & .intro__text
        padding 0
    &__feature
      +below(600px)
        width 100%
        margin-bottom rem(25)
        &:last-child
          margin-bottom 0
