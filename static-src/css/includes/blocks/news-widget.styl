.news-widget
  font-family: font-sans
  &__image
    background-size: cover
    background-position 50% 50%
    height rem(200)
    margin-bottom: rem(10)
    display none
    .page__content &
      display block
  &__item
    font-size: rem(14)
    font-weight: 500
    line-height: rem(16)
    padding rem(15) rem(15) rem(10)
    display block
    color gray6
    transition background-color .3s
    border-bottom 1px solid #e3e3e3
    &:hover
      color gray6
      background gray1
      .touch &
        color gray6
        background inherit
    .page__content &
      font-size: rem(18)
      line-height: 1.3
      border-bottom none
      margin-bottom: rem(10)
      padding-left: 0
      &:hover
        background inherit
    +below(md)
      width 33.333333%      
      display: block
      float left
      border-bottom none
      .page__content &
         width 100%
    +below(sm)
      width 50%
      .page__content &
        width 100%
    +below(xs)
      width 100%
  &__meta
    margin-top rem(5)
    font-size: rem(12)
    font-weight: 300
    // line-height 1
    // text-transform capitalize
    .page__content &
      padding-bottom rem(10)
      margin-top rem(10)
      font-size: rem(12)
  .page__content &__date
  .page__content &__category
      float left
  .page__content &__date
      padding-right rem(5)
  .page__content &__category
      padding-left rem(5)
      border-left 1px solid gray3
  .page__content &__btn
    +below(sm)
      margin 0 rem(-15)
  .ps-scrollbar-y-rail
    top:0!important
    right rem(5)
    > .ps-scrollbar-y
      background:  gray4
      opacity 0.6
  .ps-scrollbar-x-rail
    bottom rem(63)
    left 0!important
    > .ps-scrollbar-x
      background:  gray4
      opacity 0.6