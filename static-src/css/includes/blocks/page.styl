.default-page
  text-align: center
  h2
    font-weight: 500
    font-size: 2.75rem
    color: #ff881a
    line-height: 1
    text-align: center
    margin-top: 1.25rem
    margin-bottom: 1.25rem

  a
    padding: 10px
    color: orange
    text-decoration: underline
    &:hover
      text-decoration: none

  img
    width: auto
    height: auto
    max-width: 200px
    padding: 10px
    border: 1px solid lightgray
    &#fancybox-img
      max-width: none