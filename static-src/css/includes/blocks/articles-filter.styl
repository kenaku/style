.articles-filter
  background: gray5
  padding rem(25)
  a
    color white
  +below(md)
    margin 0 rem(-15)
    li
      padding 0!important
      &:before
        display none!important
        
.tag-selector
  font-size: rem(14)
  margin-bottom rem(10)
  .articles-filter--events &
    display none
  &__item
    display: inline-block
    margin-bottom rem(10)
    margin-right rem(6)
  &__link
    font-family: font-sans
    padding rem(5) rem(8)
    display: block
    transition background .3s, border-color .3s
    border 1px solid white
    letter-spacing rem(.8)
    .tag-selector__item--current &
    &:hover
    &:active
    &:focus
      color white
      background light-blue
      border-color light-blue
.year-selector
  background: transparent
  font-size: rem(35)
  box-shadow none
  border none
  margin-bottom rem(10)
  &__icon 
    display: block
    float right
    transform-origin 72% 50%
    transition transform .3s
    [aria-expanded=true] &
      transform rotate(180deg)
    svg
      width rem(14)
      height rem(8)
      // position: absolute
      // top rem(10)
      display inline-block
      vertical-align middle
      margin-left rem(10)      
      margin-top rem(-5)      
      path
        stroke white
  &__current
    display inline-block
    cursor pointer
    color white
  &__link
    padding rem(5) rem(11)
    display: block
    transition background .3s, border-color .3s
    border 1px solid white
    font-size: rem(20)
    .year-selector__item--current &
    &:hover
    &:active
    &:focus
      color white
      background light-blue
      border-color light-blue
  &__item
    display: inline-block
    // margin-bottom rem(10)
    
    
.month-selector
  margin 0 rem(-25)
  // &__item
  &__link
    display block
    font-family font-sans
    font-weight: 300
    // font-size: rem(14)
    padding rem(5) rem(25)
    transition background .3s
    .month-selector__item--current &
    .no-touch &:hover
      background: light-blue
  &__count
    float right
    display: block
    font-weight: 500
    font-size: rem(16)
    width rem(30)
    text-align: center
    



.pagination
  margin-bottom rem(10)
  width 100%
  text-align center
  .big-btn
    max-width rem(150)
    display inline-block
  &__link
    margin-bottom rem(10)
    display: inline-block
    font-family: font-sans
    font-size: rem(20)
    font-weight 500
    padding rem(5) rem(10)
    transition background .3s, border-color .3s
    letter-spacing rem(.8)
    &.current
    &:hover
    &:active
    &:focus
      color gray6
      background light-blue
      border-color light-blue